<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/mainLayout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Double Tap"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView" android:layout_marginEnd="297dp" android:layout_marginRight="297dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
    />
    <TextView
            android:text="Long Press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/textView5" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Swipe Up"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="170dp"
            android:layout_marginStart="170dp" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="85dp" android:layout_marginRight="85dp"
    />
    <TextView
            android:text="Swipe Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="246dp" app:layout_constraintEnd_toStartOf="@+id/textView7"
            android:layout_marginEnd="97dp" android:layout_marginRight="97dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="17dp" android:layout_marginStart="17dp" android:layout_marginBottom="246dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Swipe Right"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView5"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp" android:layout_marginBottom="246dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="246dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Swipe Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginLeft="67dp" android:layout_marginStart="67dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="154dp"
            android:layout_marginRight="154dp"
    />
    <ImageView
            android:src="@drawable/dig_1"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/face"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>